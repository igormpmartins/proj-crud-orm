<%- include('../partials/header') %>
<h1>Editar pessoa</h1>
<p><a href='/pessoas'>Voltar para a lista de pessoas</a></p>
<form method="POST">
    <div class="form-group">
        <label for="nome" class="font-weight-bold">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Informe seu nome" value="<%=pessoa.nome%>"/>
    </div>
    <div class="form-group">
        <label for="nascimento" class="font-weight-bold">Nascimento</label>
        <input type="date" class="form-control" id="nascimento" name="nascimento" placeholder="Informe seu nascimento" value="<%=pessoa.nascimento%>"/>
    </div>
    <div class="form-group">
        <label for="cargo" class="font-weight-bold">Cargo</label>
        <input type="text" class="form-control" id="cargo" name="cargo" placeholder="Informe seu cargo" value="<%=pessoa.cargo%>"/>
    </div>
    <button type="submit" class="btn btn-outline-dark">Gravar</button>
</form>
<%- include('../partials/footer') %>