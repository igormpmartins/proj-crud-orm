<%- include('../partials/header') %>
<h1>Pessoas</h1>
<p><a href='/pessoas/create'>Cadastrar pessoa</a></p>

<table class="table table-striped table-hover">
    <thead >
        <th>Nome</th>
        <th>Cargo</th>
        <th>Ações</th>
    </thead>
    <tbody>
        <% pessoas.map(pessoa => { %>
            <tr>
                <td><%=pessoa.nome%></td>
                <td><%=pessoa.cargo%></td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/pessoas/edit/<%=pessoa.id%>" class="btn btn-secondary mx-1" role="button">Editar</a>
                        <a href="/pessoas/delete/<%=pessoa.id%>" class="btn btn-secondary mx-1" role="button" >Apagar</a>
                    </div>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<%- include('../partials/footer') %>